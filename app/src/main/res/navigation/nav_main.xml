<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ultimate.ecommerce.ui.fragment.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/actionSplashToMain"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ultimate.ecommerce.ui.fragment.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/actionMainToSubFragment"
            app:destination="@+id/subsectionFragment"/>
    </fragment>
    <fragment
        android:id="@+id/subsectionFragment"
        android:name="com.ultimate.ecommerce.ui.fragment.subSections.SubSectionsFragment"
        android:label="fragment_subsection"/>
</navigation>